{
  "name": "@app/bot",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "main": "./main.ts",
  "directories": {
    "lib": "lib"
  },
  "dependencies": {
    "@app/database": "file:../database",
    "@app/kafka": "file:../kafka"
  },
  "scripts": {
    "dev": "dotenv -e ../../.env -- tsx watch main.ts",
    "start": "dotenv -e ../../.env -- tsx main.ts",
    "build": "dotenv -e ../../.env -- tsc",
    "migrate:dev": "dotenv -e ../../.env -- npx prisma migrate dev --schema=../database/prisma/schema.prisma --name",
    "migrate:deploy": "dotenv -e ../../.env -- npx prisma migrate deploy --schema=../database/prisma/schema.prisma",
    "generate:prisma": "dotenv -e ../../.env -- npx prisma generate --schema=../database/prisma/schema.prisma"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "dotenv-cli": "^10.0.0"
  }
}
